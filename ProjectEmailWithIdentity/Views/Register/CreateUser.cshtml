@model ProjectEmailWithIdentity.DTOs.CreateUserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/admindoc/mendy-admin/package/assets/images/favicon.png">
    <title>Mendy Admin Template - The Ultimate Multipurpose admin template</title>
    <!-- Custom CSS -->
    <link href="/admindoc/mendy-admin/package/dist/css/style.min.css" rel="stylesheet">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(/admindoc/mendy-admin/package/assets/images/big/auth-bg.jpg) no-repeat center center;">
            <div class="auth-box">
                <div>
                    <div class="logo">
                        <span class="d-block"><img src="/admindoc/mendy-admin/package/assets/images/logo-icon.png" alt="logo" /></span>
                        <h5 class="font-medium mb-3">Sign Up to Brock Mail Platform</h5>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            <form class="form-horizontal" method="post">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input asp-for="Name" class="form-control form-control-lg" type="text" required=" "
                                               placeholder="Name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input asp-for="Surname" class="form-control form-control-lg" type="text" required=""
                                               placeholder="Surname">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input asp-for="UserName" class="form-control form-control-lg" type="text" required=" "
                                               placeholder="Username">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input asp-for="EMail" class="form-control form-control-lg" type="text" required=" "
                                               placeholder="Email">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input asp-for="Password" class="form-control form-control-lg" type="password" required=" "
                                               placeholder="Password">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" required=" "
                                               placeholder="Confirm Password">
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                  
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12 ">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1" disabled>
                                            <label class="custom-control-label" for="customCheck1">
                                                I agree to all <a href="javascript:void(0)" class="link" data-toggle="modal" data-target="#termsModal">Terms</a>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row form-group text-center">
                                    <div class="col-12">
                                        <button id="btnSignUp" class="btn btn-block btn-lg bg-gradient-primary text-white" type="submit" disabled> 
                                            SIGN
                                            UP
                                        </button>
                                    </div>
                                </div>
                                <div class="row form-group mb-0 mt-2">
                                    <div class="col-12 text-center ">
                                        Already have an account? <a href="/Login/UserLogin/" class="text-primary ml-1">
                                            <b>
                                                Sign
                                                In
                                            </b>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="/admindoc/mendy-admin/package/assets/libs/jquery/dist/jquery.min.js "></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="/admindoc/mendy-admin/package/assets/libs/popper.js/dist/umd/popper.min.js "></script>
    <script src="/admindoc/mendy-admin/package/assets/libs/bootstrap/dist/js/bootstrap.min.js "></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
                $(document).ready(function () {
            // Popup içindeki "I agree" butonuna tıklandığında
            $('#agreeButton').on('click', function () {
                // 1. Checkbox'ı işaretle ve kilidini aç
                $('#customCheck1').prop('checked', true).prop('disabled', false);

                // 2. Sign Up butonunun kilidini aç
                $('#btnSignUp').prop('disabled', false);

                // 3. Modalı kapat
                $('#termsModal').modal('hide');
            });

            // Kullanıcı manuel olarak checkbox'ı kaldırırsa butonu tekrar pasif yap
            $('#customCheck1').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#btnSignUp').prop('disabled', false);
                } else {
                    $('#btnSignUp').prop('disabled', true);
                }
            });
        });
        $('[data-toggle="tooltip "]').tooltip();
        $(".preloader ").fadeOut();
    </script>
