
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}
<style>
	/* GENEL DÜZENLEMELER */
	.email-wrapper {
		padding: 25px 35px; /* Sağdan soldan boşluk */
		max-width: 1400px;
		margin: 0 auto;
	}

	.email-container {
		background: #fff;
		border-radius: 12px;
		box-shadow: 0 2px 12px rgba(0,0,0,0.08);
		overflow: hidden;
	}

	.email-header {
		padding: 20px 25px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

		.email-header h4 {
			margin: 0;
			font-size: 22px;
			font-weight: 600;
		}

	.email-count {
		background: rgba(255,255,255,0.2);
		padding: 6px 14px;
		border-radius: 20px;
		font-size: 14px;
		font-weight: 500;
	}

	/* TABLO DÜZENLEME */
	.email-table {
		margin: 0;
		width: 100%;
		table-layout: fixed;
	}

		.email-table tbody tr {
			border-bottom: 1px solid #f0f0f0;
			transition: all 0.2s ease;
		}

			.email-table tbody tr:hover {
				background-color: #f8f9ff !important;
				transform: translateX(3px);
				box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
			}

		.email-table td {
			padding: 18px 15px;
			vertical-align: middle;
			font-size: 15px;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
		}

	/* OKUNMAMIŞ MESAJ */
	.unread {
		background-color: #f0f4ff;
		border-left: 4px solid #667eea;
	}

		.unread td {
			font-weight: 600;
			color: #2c3e50;
		}

	/* YILDIZ İKONU */
	.starred {
		text-align: center;
		width: 60px;
	}

		.starred i {
			font-size: 18px;
			cursor: pointer;
			transition: all 0.2s;
		}

			.starred i:hover {
				transform: scale(1.2);
			}

	/* KONU BAŞLIĞI */
	/* KONU BAŞLIĞI */
	.subject-col {
		width: 25%;
	}

		.subject-col h6 {
			margin: 0;
			font-size: 16px;
			font-weight: 600;
			color: #2c3e50;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
			line-height: 1.5; /* Dikey hizalama için */
		}

	/* MESAJ İÇERİĞİ */
	.content-col {
		width: 40%;
		display: flex;
		align-items: center;
		gap: 8px; /* Etiket ve metin arası boşluk */
	}

	.label {
		display: inline-flex;
		align-items: center;
		padding: 5px 12px; /* Biraz daha yüksek */
		border-radius: 12px;
		font-size: 11px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		flex-shrink: 0;
		height: 24px; /* Sabit yükseklik */
		line-height: 1;
	}

	.message-preview {
		color: #6c757d;
		font-size: 14px;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
		flex: 1;
		min-width: 0; /* Flexbox taşmasını önler */
		line-height: 1.5;
	}
	/* BUTONLAR */
	.actions-col {
		width: 180px;
		text-align: center;
	}

	.btn-group-custom {
		display: inline-flex;
		gap: 6px;
	}

	.btn-icon {
		width: 36px;
		height: 36px;
		padding: 0;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 8px;
		border: 1px solid #e0e0e0;
		background: white;
		transition: all 0.2s;
		cursor: pointer;
	}

		.btn-icon:hover {
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(0,0,0,0.1);
		}

		.btn-icon.btn-read:hover {
			background: #3498db;
			border-color: #3498db;
			color: white;
		}

		.btn-icon.btn-draft:hover {
			background: #f39c12;
			border-color: #f39c12;
			color: white;
		}

		.btn-icon.btn-trash:hover {
			background: #e74c3c;
			border-color: #e74c3c;
			color: white;
		}

	/* TARİH */
	.time-col {
		width: 120px;
		text-align: right;
		font-size: 14px;
		color: #95a5a6;
		font-weight: 500;
	}

	/* PAGİNATİON */
	.pagination-wrapper {
		padding: 25px;
		background: #f8f9fa;
		border-top: 1px solid #e9ecef;
	}

	.pagination {
		margin: 0;
		gap: 8px;
	}

	.page-item .page-link {
		border-radius: 8px;
		border: 1px solid #dee2e6;
		color: #495057;
		padding: 10px 16px;
		font-weight: 500;
		transition: all 0.2s;
	}

		.page-item .page-link:hover {
			background: #667eea;
			border-color: #667eea;
			color: white;
			transform: translateY(-2px);
		}

	.page-item.active .page-link {
		background: #667eea;
		border-color: #667eea;
	}

	.empty-inbox {
		text-align: center;
		padding: 60px 20px;
		color: #95a5a6;
	}

		.empty-inbox i {
			font-size: 64px;
			margin-bottom: 20px;
			opacity: 0.3;
		}

	@@media (max-width: 1200px) {
		.email-wrapper {
			padding: 20px 25px;
		}
	}

	@@media (max-width: 768px) {
		.email-wrapper {
			padding: 15px;
		}

		.content-col, .actions-col {
			display: none;
		}

		.subject-col {
			width: 70%;
		}
	}
</style>

<div class="right-part mail-details bg-white">
    <div class="card-body">
        <button type="button" id="back_to_inbox" class="btn btn-outline-secondary font-18 m-r-10">
            <i class="mdi mdi-arrow-left"></i>
        </button>
        <div class="btn-group m-r-10" role="group" aria-label="Button group with nested dropdown">
            <button type="button" class="btn btn-outline-secondary font-18"><i class="mdi mdi-reply"></i></button>
            <button type="button" class="btn btn-outline-secondary font-18"><i class="mdi mdi-alert-octagon"></i></button>
            <button type="button" class="btn btn-outline-secondary font-18"><i class="mdi mdi-delete"></i></button>
        </div>
    </div>
    <div class="card-body border-top border-bottom bg-light">
        <h4 class="m-b-0">@ViewBag.Subject</h4>
    </div>
    <div class="card-body border-bottom">
        <div class="d-flex no-block align-items-center m-b-40">
            <div class="m-r-10">
                <img src="@ViewBag.SenderImage" alt="user" class="rounded-circle"
                     width="45">
            </div>
            <div class="">
                <h5 class="m-b-0 font-16 font-medium">@ViewBag.SenderName <small> ( @ViewBag.SenderMail)</small></h5>
            </div>
        </div>
        <div class="message-content" style="line-height: 1.6; color: #455a64;">
            @Html.Raw(ViewBag.MessageDetail)
        </div>
        <hr>
        <div class="text-right">
            <small class="text-muted">Sent Date: @ViewBag.SendDate</small>
        </div>
    </div>
 
</div>

