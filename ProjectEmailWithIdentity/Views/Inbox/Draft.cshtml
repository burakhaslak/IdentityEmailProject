@model List<ProjectEmailWithIdentity.Entities.Message>
@using ProjectEmailWithIdentity.Helpers
@{
    ViewData["Title"] = "Drafts";
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}

<style>
	/* GENEL DÜZENLEMELER */
	.email-wrapper {
		padding: 25px 35px; /* Sağdan soldan boşluk */
		max-width: 1400px;
		margin: 0 auto;
	}

	.email-container {
		background: #fff;
		border-radius: 12px;
		box-shadow: 0 2px 12px rgba(0,0,0,0.08);
		overflow: hidden;
	}

	.email-header {
		padding: 20px 25px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

		.email-header h4 {
			margin: 0;
			font-size: 22px;
			font-weight: 600;
		}

	.email-count {
		background: rgba(255,255,255,0.2);
		padding: 6px 14px;
		border-radius: 20px;
		font-size: 14px;
		font-weight: 500;
	}

	/* TABLO DÜZENLEME */
	.email-table {
		margin: 0;
		width: 100%;
		table-layout: fixed;
	}

		.email-table tbody tr {
			border-bottom: 1px solid #f0f0f0;
			transition: all 0.2s ease;
		}

			.email-table tbody tr:hover {
				background-color: #f8f9ff !important;
				transform: translateX(3px);
				box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
			}

		.email-table td {
			padding: 18px 15px;
			vertical-align: middle;
			font-size: 15px;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
		}

	/* OKUNMAMIŞ MESAJ */
	.unread {
		background-color: #f0f4ff;
		border-left: 4px solid #667eea;
	}

		.unread td {
			font-weight: 600;
			color: #2c3e50;
		}

	/* YILDIZ İKONU */
	.starred {
		text-align: center;
		width: 60px;
	}

		.starred i {
			font-size: 18px;
			cursor: pointer;
			transition: all 0.2s;
		}

			.starred i:hover {
				transform: scale(1.2);
			}

	/* KONU BAŞLIĞI */
	/* KONU BAŞLIĞI */
	.subject-col {
		width: 25%;
	}

		.subject-col h6 {
			margin: 0;
			font-size: 16px;
			font-weight: 600;
			color: #2c3e50;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
			line-height: 1.5; /* Dikey hizalama için */
		}

	/* MESAJ İÇERİĞİ */
	.content-col {
		width: 40%;
		display: flex;
		align-items: center;
		gap: 8px; /* Etiket ve metin arası boşluk */
	}

	.label {
		display: inline-flex;
		align-items: center;
		padding: 5px 12px; /* Biraz daha yüksek */
		border-radius: 12px;
		font-size: 11px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		flex-shrink: 0;
		height: 24px; /* Sabit yükseklik */
		line-height: 1;
	}

	.message-preview {
		color: #6c757d;
		font-size: 14px;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
		flex: 1;
		min-width: 0; /* Flexbox taşmasını önler */
		line-height: 1.5;
	}
	/* BUTONLAR */
	.actions-col {
		width: 180px;
		text-align: center;
	}

	.btn-group-custom {
		display: inline-flex;
		gap: 6px;
	}

	.btn-icon {
		width: 36px;
		height: 36px;
		padding: 0;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 8px;
		border: 1px solid #e0e0e0;
		background: white;
		transition: all 0.2s;
		cursor: pointer;
	}

		.btn-icon:hover {
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(0,0,0,0.1);
		}

		.btn-icon.btn-read:hover {
			background: #3498db;
			border-color: #3498db;
			color: white;
		}

		.btn-icon.btn-draft:hover {
			background: #f39c12;
			border-color: #f39c12;
			color: white;
		}

		.btn-icon.btn-trash:hover {
			background: #e74c3c;
			border-color: #e74c3c;
			color: white;
		}

	/* TARİH */
	.time-col {
		width: 120px;
		text-align: right;
		font-size: 14px;
		color: #95a5a6;
		font-weight: 500;
	}

	/* PAGİNATİON */
	.pagination-wrapper {
		padding: 25px;
		background: #f8f9fa;
		border-top: 1px solid #e9ecef;
	}

	.pagination {
		margin: 0;
		gap: 8px;
	}

	.page-item .page-link {
		border-radius: 8px;
		border: 1px solid #dee2e6;
		color: #495057;
		padding: 10px 16px;
		font-weight: 500;
		transition: all 0.2s;
	}

		.page-item .page-link:hover {
			background: #667eea;
			border-color: #667eea;
			color: white;
			transform: translateY(-2px);
		}

	.page-item.active .page-link {
		background: #667eea;
		border-color: #667eea;
	}

	.empty-inbox {
		text-align: center;
		padding: 60px 20px;
		color: #95a5a6;
	}

		.empty-inbox i {
			font-size: 64px;
			margin-bottom: 20px;
			opacity: 0.3;
		}

	@@media (max-width: 1200px) {
		.email-wrapper {
			padding: 20px 25px;
		}
	}

	@@media (max-width: 768px) {
		.email-wrapper {
			padding: 15px;
		}

		.content-col, .actions-col {
			display: none;
		}

		.subject-col {
			width: 70%;
		}
	}
</style>

<div class="email-wrapper">
    <div class="email-container">

        <div class="email-header">
            <h4><i class="fas fa-file-alt mr-2"></i> Drafts</h4>
            <span class="email-count">@Model.Count Saved Drafts</span>
        </div>

        @if (Model.Any())
        {
            <table class="email-table">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="msg-row-@item.MessageId"
                            class="draft-row clickable-row"
                            onclick="openDraft(@item.MessageId)"
                            style="cursor: pointer;">
                            <td class="starred">
                                <i class="fas fa-pencil-alt text-muted"></i>
                            </td>
                            <td class="subject-col">
                                <small class="text-muted d-block">Draft to: @(string.IsNullOrEmpty(item.ReceiverMail) ? "(No Recipient)" : item.ReceiverMail)</small>
                                <h6 title="@item.Subject">@(string.IsNullOrEmpty(item.Subject) ? "(No Subject)" : item.Subject)</h6>
                            </td>
                            <td class="content-col">
                                @if (!string.IsNullOrEmpty(item.Category?.CategoryName))
                                {
                                    <span class="label @item.Category?.CategoryColor">@item.Category?.CategoryName</span>
                                }
                                <span class="message-preview">
                                    @{
                                        var plainText = System.Text.RegularExpressions.Regex.Replace(item.MessageDetail ?? "", "<.*?>", string.Empty);
                                        @(plainText.Length > 50 ? plainText.Substring(0, 50) + "..." : (string.IsNullOrEmpty(plainText) ? "(Empty Content)" : plainText))
                                    }
                                </span>
                            </td>
                            <td class="actions-col">
                                <div class="btn-group-custom">
                                    @* Taslağı düzenle buton (Göz yerine kalem) *@
                                    <button onclick="openDraft(@item.MessageId)" class="btn-icon btn-draft" title="Edit Draft">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    @* Taslağı sil (Kalıcı olarak silebiliriz) *@
                                    <button onclick="deleteDraft(@item.MessageId)" class="btn-icon btn-trash" title="Discard Draft">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                            <td class="time-col">
                                @DateHelper.ToRelativeDate(item.SendDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-inbox">
                <i class="fas fa-edit"></i>
                <h5>No drafts saved</h5>
                <p class="text-muted">Drafts you start composing will appear here.</p>
            </div>
        }
    </div>
</div>

<script>
    
    function openDraft(id) {
        if (event && ['BUTTON', 'I'].includes(event.target.tagName)) return;
        window.location.href = "/Inbox/SendMessage/" + id;
    }

    function deleteDraft(id) {
        if (confirm("This draft will be deleted permanently. Are you sure?")) {
            $.post("/Inbox/PermanentDelete", { id: id }, function (response) {
                if (response.success) {
                    $("#msg-row-" + id).fadeOut(400, function() { $(this).remove(); });
                }
            });
        }
    }
</script>