@model ProjectEmailWithIdentity.Entities.Message
@{
	ViewData["Title"] = "SendMessage";
	Layout = "~/Views/Shared/_MailLayout.cshtml";
}
<style>
	/* GENEL DÜZENLEMELER */
	.email-wrapper {
		padding: 25px 35px; /* Sağdan soldan boşluk */
		max-width: 1400px;
		margin: 0 auto;
	}

	.email-container {
		background: #fff;
		border-radius: 12px;
		box-shadow: 0 2px 12px rgba(0,0,0,0.08);
		overflow: hidden;
	}

	.email-header {
		padding: 20px 25px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

		.email-header h4 {
			margin: 0;
			font-size: 22px;
			font-weight: 600;
		}

	.email-count {
		background: rgba(255,255,255,0.2);
		padding: 6px 14px;
		border-radius: 20px;
		font-size: 14px;
		font-weight: 500;
	}

	/* TABLO DÜZENLEME */
	.email-table {
		margin: 0;
		width: 100%;
		table-layout: fixed;
	}

		.email-table tbody tr {
			border-bottom: 1px solid #f0f0f0;
			transition: all 0.2s ease;
		}

			.email-table tbody tr:hover {
				background-color: #f8f9ff !important;
				transform: translateX(3px);
				box-shadow: 0 2px 8px rgba(102, 126, 234, 0.1);
			}

		.email-table td {
			padding: 18px 15px;
			vertical-align: middle;
			font-size: 15px;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
		}

	/* OKUNMAMIŞ MESAJ */
	.unread {
		background-color: #f0f4ff;
		border-left: 4px solid #667eea;
	}

		.unread td {
			font-weight: 600;
			color: #2c3e50;
		}

	/* YILDIZ İKONU */
	.starred {
		text-align: center;
		width: 60px;
	}

		.starred i {
			font-size: 18px;
			cursor: pointer;
			transition: all 0.2s;
		}

			.starred i:hover {
				transform: scale(1.2);
			}

	/* KONU BAŞLIĞI */
	/* KONU BAŞLIĞI */
	.subject-col {
		width: 25%;
	}

		.subject-col h6 {
			margin: 0;
			font-size: 16px;
			font-weight: 600;
			color: #2c3e50;
			overflow: hidden;
			text-overflow: ellipsis;
			white-space: nowrap;
			line-height: 1.5; /* Dikey hizalama için */
		}

	/* MESAJ İÇERİĞİ */
	.content-col {
		width: 40%;
		display: flex;
		align-items: center;
		gap: 8px; /* Etiket ve metin arası boşluk */
	}

	.label {
		display: inline-flex;
		align-items: center;
		padding: 5px 12px; /* Biraz daha yüksek */
		border-radius: 12px;
		font-size: 11px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		flex-shrink: 0;
		height: 24px; /* Sabit yükseklik */
		line-height: 1;
	}

	.message-preview {
		color: #6c757d;
		font-size: 14px;
		overflow: hidden;
		text-overflow: ellipsis;
		white-space: nowrap;
		flex: 1;
		min-width: 0; /* Flexbox taşmasını önler */
		line-height: 1.5;
	}
	/* BUTONLAR */
	.actions-col {
		width: 180px;
		text-align: center;
	}

	.btn-group-custom {
		display: inline-flex;
		gap: 6px;
	}

	.btn-icon {
		width: 36px;
		height: 36px;
		padding: 0;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 8px;
		border: 1px solid #e0e0e0;
		background: white;
		transition: all 0.2s;
		cursor: pointer;
	}

		.btn-icon:hover {
			transform: translateY(-2px);
			box-shadow: 0 4px 8px rgba(0,0,0,0.1);
		}

		.btn-icon.btn-read:hover {
			background: #3498db;
			border-color: #3498db;
			color: white;
		}

		.btn-icon.btn-draft:hover {
			background: #f39c12;
			border-color: #f39c12;
			color: white;
		}

		.btn-icon.btn-trash:hover {
			background: #e74c3c;
			border-color: #e74c3c;
			color: white;
		}

	/* TARİH */
	.time-col {
		width: 120px;
		text-align: right;
		font-size: 14px;
		color: #95a5a6;
		font-weight: 500;
	}

	/* PAGİNATİON */
	.pagination-wrapper {
		padding: 25px;
		background: #f8f9fa;
		border-top: 1px solid #e9ecef;
	}

	.pagination {
		margin: 0;
		gap: 8px;
	}

	.page-item .page-link {
		border-radius: 8px;
		border: 1px solid #dee2e6;
		color: #495057;
		padding: 10px 16px;
		font-weight: 500;
		transition: all 0.2s;
	}

		.page-item .page-link:hover {
			background: #667eea;
			border-color: #667eea;
			color: white;
			transform: translateY(-2px);
		}

	.page-item.active .page-link {
		background: #667eea;
		border-color: #667eea;
	}

	.empty-inbox {
		text-align: center;
		padding: 60px 20px;
		color: #95a5a6;
	}

		.empty-inbox i {
			font-size: 64px;
			margin-bottom: 20px;
			opacity: 0.3;
		}

	@@media (max-width: 1200px) {
		.email-wrapper {
			padding: 20px 25px;
		}
	}

	@@media (max-width: 768px) {
		.email-wrapper {
			padding: 15px;
		}

		.content-col, .actions-col {
			display: none;
		}

		.subject-col {
			width: 70%;
		}
	}
</style>
<div class="container-fluid">
	<!-- ============================================================== -->
	<!-- Email App Part -->
	<!-- ============================================================== -->
	<div class="email-app">
		<!-- ============================================================== -->
		<!-- Left Part -->
		<!-- ============================================================== -->
		<!-- ============================================================== -->
		<!-- Right Part -->
		<!-- ============================================================== -->
		<div class="right-part mail-compose bg-white">
			<div class="p-20 border-bottom">
				<div class="d-flex align-items-center">
					<div>
						<h4>Compose</h4>
						<span>create new message</span>
					</div>
				</div>
			</div>
			<!-- Action part -->
			<!-- Button group part -->
			<div class="card-body">
				<form method="post">
					<div class="form-group">
						<input asp-for="ReceiverMail" placeholder="To" class="form-control" id="targetEmail" />
					</div>
					<div class="form-group">
						<input asp-for="Subject" placeholder="Subject" class="form-control" id="targetSubject" />
					</div>
					<div class="form-group">
						<label>Category</label>
						@Html.DropDownListFor(x => x.CategoryID, (SelectList)ViewBag.CategoryList,
						"-- Select --", new { @class = "form-control", id = "targetCategory" })
					</div>

					<div class="form-group">
						<textarea asp-for="MessageDetail" id="summernote"></textarea>
					</div>

					<button type="submit" class="btn btn-success m-t-20">
						<i class="far fa-envelope"></i>
						Send
					</button>
					<button type="button" onclick="saveManualDraft()" class="btn btn-info m-t-20">
						<i class="far fa-save"></i> Save as Draft
					</button>
					<a href="/Inbox/Inbox/" type="submit" class="btn btn-dark m-t-20">Discard</a>
				</form>
				<!-- Action part -->
			</div>
		</div>
	</div>
	<!-- ============================================================== -->
	<!-- Email App Part -->
	<!-- ============================================================== -->
</div>

<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

<script>
	let isSent = false;

	$(document).ready(function() {
	
		$('#summernote').summernote({
			placeholder: 'Mesajınızı buraya yazın...',
			tabsize: 2,
			height: 300,
			callbacks: {
			
			}
		});
	});

	document.getElementById("composeForm").onsubmit = function() {
		isSent = true;
	};

	window.addEventListener("beforeunload", function (e) {
		if (isSent) return;


		const detail = $('#summernote').summernote('code');
		const email = document.getElementById("targetEmail").value;
		const subject = document.getElementById("targetSubject").value;
		const categoryId = document.getElementById("targetCategory").value;

	
		if (email || subject || (detail && detail !== '<p><br></p>')) {
			const draftData = {
				ReceiverEmail: email,
				Subject: subject,
				MessageDetail: detail,
				CategoryID: parseInt(categoryId) || 0
			};

			fetch('/Message/SaveDraft', {
				method: 'POST',
				headers: { 'Content-Type': 'application/json' },
				body: JSON.stringify(draftData),
				keepalive: true
			});
		}
	});

		function saveManualDraft() {
		const detail = $('#summernote').summernote('code');
		const email = document.getElementById("targetEmail").value;
		const subject = document.getElementById("targetSubject").value;
		const categoryId = document.getElementById("targetCategory").value;

		const draftData = {
			ReceiverMail: email, 
			Subject: subject,
			MessageDetail: detail,
			CategoryID: parseInt(categoryId) || 0
		};

		$.ajax({
			url: '/Inbox/SaveDraft', 
			type: 'POST',
			data: draftData,
			success: function (response) {
				if (response.success) {
					alert("Saved as draft successfully!");
					window.location.href = "/Inbox/Draft"; 
				}
			}
		});
	}
</script>